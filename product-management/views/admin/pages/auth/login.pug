extends ../../layouts/auth
include ../../mixins/alert

block main
  +alert-success("5000")
  +alert-error("5000")
  .container
    .row.justify-content-center
      .col-md-6
        .card.mt-5.shadow
          .card-header.bg-primary.text-white.text-center
            h4.mb-0 Đăng nhập hệ thống
          .card-body
            form(method="POST", action=`${prefixAdmin}/auth/login`)
              .mb-3
                label.form-label(for="email") Email
                input.form-control(type="email", name="email", id="email", required)
              .mb-3
                label.form-label(for="password") Mật khẩu
                input.form-control(type="password", name="password", id="password", required)
              .d-grid
                button.btn.btn-primary(type="submit") Đăng nhập
