extends ../../layouts/default
include ../../mixins/alert
block main
  +alert-success()
  +alert-error()
  h1 Cài đặt chung

  form(action=`${prefixAdmin}/settings/general?_method=PATCH`, method="POST", enctype="multipart/form-data")
    .form-group
      label(for="websiteName") Tên Website
      input#websiteName.form-control(
        type="text", 
        name="websiteName", 
        required, 
        value=(setting && setting.websiteName ? setting.websiteName : "")
      )

    .form-group
      label(for="logo") Logo (tệp ảnh)
      input.form-control-file(type="file", name="logo", id="logo", accept="image/*")
      
      if setting && setting.logo
        p.mt-2 Logo hiện tại:
        img(src=`/uploads/${setting.logo}`, alt="Logo hiện tại", style="max-height: 60px")


    .form-group
      label(for="phone") Số điện thoại
      input#phone.form-control(
        type="text", 
        name="phone", 
        value=(setting && setting.phone ? setting.phone : "")
      )

    .form-group
      label(for="email") Email
      input#email.form-control(
        type="email", 
        name="email", 
        value=(setting && setting.email ? setting.email : "")
      )

    .form-group
      label(for="address") Địa chỉ
      input#address.form-control(
        type="text", 
        name="address", 
        value=(setting && setting.address ? setting.address : "")
      )

    .form-group
      label(for="copyright") Bản quyền
      input#copyright.form-control(
        type="text", 
        name="copyright", 
        value=(setting && setting.copyright ? setting.copyright : "")
      )

    button.btn.btn-primary(type="submit") Cập nhật
