extends ../../layouts/default

block main
  .container
    h1.mb-4.text-primary #{product.title}

    .row
      .col-md-5
        img.img-fluid.img-thumbnail(
          src=`/${product.thumbnail}`,
          alt=product.title,
          style="object-fit: cover; width: 100%; max-height: 400px;"
        )

      .col-md-7
        if product.discountPercentage > 0
          h4.text-danger Giá khuyến mãi: #{product.newPrice.toLocaleString()} VNĐ
          p
            | Giá gốc:
            del.text-muted.ml-2 #{product.price.toLocaleString()} VNĐ
          p.text-success
            | Giảm:
            strong.ml-1 #{product.discountPercentage}%
        else
          h4.text-primary Giá: #{product.price.toLocaleString()} VNĐ

        p.mt-3
          strong Mô tả:
          | #{product.description}

        p
          strong Tồn kho:
          | #{product.stock}

        p
          strong Vị trí:
          | #{product.position}


        a.btn.btn-secondary.mt-3(href="/product") Quay lại danh sách
