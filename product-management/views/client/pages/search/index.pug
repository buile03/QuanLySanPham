extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-success(3000)
  +alert-error(3000)

  .container.my-5
    h1.my-4 Kết quả tìm kiếm cho: "#{keyword}"

    if products && products.length > 0
      h3 Sản phẩm
      .row
        each product in products
          .col-md-3.mb-4
            .product-item
              a(href=`/product/detail/${product.slug}`)
                img(src=product.thumbnail, alt=product.title)
              h4.mt-2
                a(href=`/product/detail/${product.slug}`)= product.title
              p Giá: #{product.priceNew}đ
                if product.price > product.priceNew
                  span.text-danger.ms-2
                    del #{product.price}đ

    //- if categories && categories.length > 0
    //-   h3.mt-5 Danh mục
    //-   .row
    //-     each category in categories
    //-       .col-md-3.mb-4
    //-         .category-item
    //-           a(href=`/product/category/${category.slug}`)
    //-             h4= category.title

    if (!products || products.length === 0) 
      .alert.alert-info Không tìm thấy kết quả nào phù hợp với từ khóa "#{keyword}"